{
  "id": null,
  "uid": "app-monitoring",
  "title": "App Monitoring",
  "tags": ["containers", "docker", "application"],
  "timezone": "browser",
  "schemaVersion": 27,
  "version": 1,
  "panels": [
    {
      "type": "gauge",
      "title": "Backend CPU Usage (%)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"url-shortener-backend\"}[1m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 0, "w": 8, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Frontend CPU Usage (%)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"url-shortener-frontend\"}[1m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "gridPos": { "x": 8, "y": 0, "w": 8, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Database CPU Usage (%)",
      "targets": [
        {
          "expr": "sum(rate(container_cpu_usage_seconds_total{name=\"mysql-db\"}[1m])) * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 60 },
              { "color": "red", "value": 80 }
            ]
          }
        }
      },
      "gridPos": { "x": 16, "y": 0, "w": 8, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Backend Memory Usage",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=\"url-shortener-backend\"} / container_spec_memory_limit_bytes{name=\"url-shortener-backend\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 6, "w": 8, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Frontend Memory Usage",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=\"url-shortener-frontend\"} / container_spec_memory_limit_bytes{name=\"url-shortener-frontend\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "gridPos": { "x": 8, "y": 6, "w": 8, "h": 6 }
    },
    {
      "type": "gauge",
      "title": "Database Memory Usage",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=\"mysql-db\"} / container_spec_memory_limit_bytes{name=\"mysql-db\"} * 100",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "percent",
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null },
              { "color": "orange", "value": 70 },
              { "color": "red", "value": 90 }
            ]
          }
        }
      },
      "gridPos": { "x": 16, "y": 6, "w": 8, "h": 6 }
    },
    {
      "type": "timeseries",
      "title": "Container Memory Usage Over Time",
      "targets": [
        {
          "expr": "container_memory_usage_bytes{name=~\"url-shortener-backend|url-shortener-frontend|mysql-db\"}",
          "legendFormat": "{{name}}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "bytes"
        }
      },
      "gridPos": { "x": 0, "y": 12, "w": 24, "h": 8 }
    },
    {
      "type": "timeseries",
      "title": "Container Network Traffic",
      "targets": [
        {
          "expr": "rate(container_network_receive_bytes_total{name=~\"url-shortener-backend|url-shortener-frontend\"}[1m])",
          "legendFormat": "{{name}} - Receive",
          "refId": "A"
        },
        {
          "expr": "rate(container_network_transmit_bytes_total{name=~\"url-shortener-backend|url-shortener-frontend\"}[1m])",
          "legendFormat": "{{name}} - Transmit",
          "refId": "B"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "unit": "Bps"
        }
      },
      "gridPos": { "x": 0, "y": 20, "w": 24, "h": 8 }
    },
    {
      "type": "stat",
      "title": "Backend Container Status",
      "targets": [
        {
          "expr": "container_last_seen{name=\"url-shortener-backend\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "special",
              "options": {
                "match": "null",
                "result": { "text": "DOWN", "color": "red" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      },
      "gridPos": { "x": 0, "y": 28, "w": 8, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Frontend Container Status",
      "targets": [
        {
          "expr": "container_last_seen{name=\"url-shortener-frontend\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "special",
              "options": {
                "match": "null",
                "result": { "text": "DOWN", "color": "red" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      },
      "gridPos": { "x": 8, "y": 28, "w": 8, "h": 4 }
    },
    {
      "type": "stat",
      "title": "Database Container Status",
      "targets": [
        {
          "expr": "container_last_seen{name=\"mysql-db\"}",
          "refId": "A"
        }
      ],
      "fieldConfig": {
        "defaults": {
          "mappings": [
            {
              "type": "special",
              "options": {
                "match": "null",
                "result": { "text": "DOWN", "color": "red" }
              }
            }
          ],
          "thresholds": {
            "mode": "absolute",
            "steps": [
              { "color": "green", "value": null }
            ]
          }
        }
      },
      "gridPos": { "x": 16, "y": 28, "w": 8, "h": 4 }
    }
  ]
}
